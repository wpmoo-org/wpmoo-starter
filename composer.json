{
  "name": "wpmoo/wpmoo-starter",
  "description": "Starter plugin demonstrating WPMoo Framework usage.",
  "type": "wordpress-plugin",
  "require": {
    "php": ">=7.4",
    "wpmoo-org/wpmoo": "dev-dev"
  },
  "repositories": [
    {
      "type": "path",
      "url": "../wpmoo",
      "options": {
        "symlink": true
      }
    },
    {
      "type": "path",
      "url": "../wpmoo-coding-standards",
      "options": {
        "symlink": true
      }
    }
  ],
  "autoload": {
    "psr-4": {
      "WPMooStarter\\": "src/"
    }
  },
  "require-dev": {
    "wpmoo/wpmoo-coding-standards": "dev-main"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "moo": "php vendor/bin/moo",
    "sync-moo": [
      "@php -r \"if (!file_exists('vendor/wpmoo-org/wpmoo/bin/moo')) { exit(0); } if (!file_exists('moo')) { copy('vendor/wpmoo-org/wpmoo/bin/moo', 'moo'); if (function_exists('chmod')) { @chmod('moo', 0755); } }\""
    ],
    "post-install-cmd": [
      "@sync-moo"
    ],
    "post-update-cmd": [
      "@sync-moo"
    ]
  }
}
