<?xml version="1.0"?>
<ruleset name="WPMoo Starter">
    <description>Project ruleset consuming the shared WPMoo coding standard configuration.</description>

    <rule ref="vendor/wpmoo/wpmoo-coding-standards/phpcs.xml.dist"/>

    <file>src</file>
    <file>wpmoo-starter.php</file>

    <rule ref="WordPress.WP.I18n">
        <properties>
            <property name="text_domain" type="array">
                <element value="wpmoo-starter"/>
            </property>
        </properties>
    </rule>
</ruleset>
